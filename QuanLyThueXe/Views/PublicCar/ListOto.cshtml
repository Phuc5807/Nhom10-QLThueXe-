
@{
    ViewBag.Title = "List ô tô";
    Layout = "~/Views/Shared/_LayoutPublic.cshtml";
}
<div class="hero-wrap js-fullheight" style="background-image: url('https://media-cdn-v2.laodong.vn/Storage/NewsPortal/2020/4/17/799236/KHACH-SAN.jpg'); height: 350px ">
    <div class="overlay"></div>
    <div class="container">
        <div class="row no-gutters slider-text js-fullheight align-items-center justify-content-center" data-scrollax-parent="true">
            <div class="col-md-9 text-center" style="margin-top: 200px" data-scrollax=" properties: { translateY: '70%' }">
                <p class="breadcrumbs" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }"><span class="mr-2"><a href="/">Trang chủ</a></span> <span>Xe</span></p>
                <h1 class="mb-3 bread" data-scrollax="properties: { translateY: '30%', opacity: 1.6 }">Xe trong hệ thống</h1>
            </div>
        </div>
    </div>
</div>
<section class="ftco-section ftco-degree-bg">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="row">
                    @foreach (var item in ViewBag.List)
                    {
                        <div class="col-sm col-md-6 col-lg ftco-animate">
                            <div class="destination">
                                <a href="/PublicCar/DetailCar/@item.vehicle_id" class="img img-2 d-flex justify-content-center align-items-center" style="background-image: url(/Content/images/@item.image);">
                                    <div class="icon d-flex justify-content-center align-items-center">
                                        <span class="icon-search2"></span>
                                    </div>
                                </a>
                                <div class="text p-3">
                                    <div class="d-flex">
                                        <div class="one">
                                            <h3><a href="/PublicCar/DetailCar/@item.vehicle_id">@item.name</a></h3>
                                            <p class="rate">
                                                <i class="icon-star"></i>
                                                <i class="icon-star"></i>
                                                <i class="icon-star"></i>
                                                <i class="icon-star"></i>
                                                <i class="icon-star-o"></i>

                                            </p>
                                        </div>
                                        <div class="two">

                                            <span class="price">@item.price VNĐ</span>
                                        </div>
                                    </div>
                                    @*   <p>Far far away, behind the word mountains, far from the countries</p>*@
                                    <p class="days"><span>@item.type_vehicle</span></p>
                                    <hr>
                                    <p class="bottom-area d-flex">
                                        <span>Số lượng : @item.quantity </span>
                                        <span class="ml-auto"><a href="/PublicCar/DetailCar/@item.vehicle_id">Xem chi tiết</a></span>
                                    </p>
                                </div>
                            </div>
                        </div>
                    }

                </div>
                <div class="row mt-5">
                    <div class="col text-center">
                        <div class="block-27">
                            <ul>
                                @if (ViewBag.tag > 1)
                                {
                                    int b = ViewBag.tag - 1;
                                    <li><a href="/PublicCar/ListOto/@b">&lt;</a></li>

                                }
                                else
                                {
                                    <li></li>
                                }
                                @for (var i = 1; i <= ViewBag.pageSize; i++)
                                {
                                    if (ViewBag.tag == i)
                                    {
                                        <li class="active"><a href="/PublicCar/ListOto/@i">@i</a></li>
                                    }
                                    else
                                    {
                                        <li><a href="/PublicCar/ListOto/@i">@i</a></li>
                                    }

                                }

                                @if (ViewBag.tag < ViewBag.pageSize)
                                {
                                    int a = ViewBag.tag + 1;
                                    <li><a href="/PublicCar/ListOto/@a">&gt;</a></li>

                                }
                                else
                                {
                                    <li></li>
                                }

                            </ul>
                        </div>
                    </div>
                </div>
            </div> <!-- .col-md-8 -->
        </div>
    </div>
</section> <!-- .section -->
